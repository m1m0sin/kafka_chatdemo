@{
    ViewData["Title"] = "Chat con Kafka";
}

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}

@section Styles {
    <style>
        #chat { display: none; }
        #messages div { margin: 3px 0; }
    </style>
}

<div class="text-center">
    <h1 class="display-4">Bienvenidos</h1>
    <p>Este es un ejemplo de chat con Kafka</p>
</div>

<div class="container">
    <div class="card" id="login">
        <div class="card-body">
            <h3 class="card-title">Unirse al chat</h3>
            <form>
                <div class="form-group mb-2">
                    <label for="username">Tu nombre</label>
                    <input id="username" class="form-control" placeholder="Ingresa tu nombre" autocomplete="off" />
                </div>
                <button type="button" id="joinChat" class="btn btn-primary">Unirse al chat</button>
            </form>
        </div>
    </div>

    <div class="card" id="chat">
        <div class="card-header">
            <h3>Chat en tiempo real</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <h4>Usuarios conectados:</h4>
                    <ul class="list-group" id="users">
                    </ul>
                </div>
                <div class="col-8">
                    <h4>Enviar mensajes:</h4>
                    <form class="mb-2">
                        <div class="input-group">
                            <select class="form-control" id="toUser"></select>
                            <input class="form-control mr-sm-2" id="message" placeholder="Mensaje..." autocomplete="off" />
                            <div class="input-group-append">
                                <button type="button" class="btn btn-outline-success my-2 my-sm-0" id="sendMessage">Enviar</button>
                            </div>
                        </div>
                    </form>
                    <h4>Mensajes recibidos:</h4>
                    <div class="card">
                        <div class="card-body">
                            <div id="messages"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>